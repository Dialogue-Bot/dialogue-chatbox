{
  "name": "dialogue-chatbox",
  "private": false,
  "version": "1.0.3",
  "type": "module",
  "files": [
    "dist-components"
  ],
  "types": "",
  "main": "dist-components/chatbox.umd.js",
  "module": "dist-components/chatbox.esm.js",
  "exports": {
    ".": {
      "import": "./dist-components/chatbox.esm.js",
      "require": "./dist-components/chatbox.umd.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build-web": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "build-components": "tsc && vite build --config vite-components.config.ts",
    "build": "concurrently \"npm run build-components\" \"npm run build-web\""
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "lucide-react": "^0.364.0",
    "million": "^3.0.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io-client": "^4.7.5",
    "tailwind-merge": "^2.2.2",
    "tailwindcss-animate": "^1.0.7",
    "usehooks-ts": "^3.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.12.2",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vite-plugin-dts": "^3.8.1",
    "vite-tsconfig-paths": "^4.3.2"
  }
}
